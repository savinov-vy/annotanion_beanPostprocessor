<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ru.savinov.springcontext.anotation.CalculateCatStranghtBeanPostProcessor"/>

    <bean class="ru.savinov.springcontext.CombatCat" id="loryCat">
        <property name="name" value="Lory"/>
    </bean>

    <bean class="ru.savinov.springcontext.CombatCat" id="baxterCat">
        <property name="name" value="Baxter"/>
    </bean>

    <bean class="ru.savinov.springcontext.FightClubImpl" id="fightClub">
        <property name="loryCat" ref="loryCat"/>
        <property name="baxterCat" ref="baxterCat"/>
    </bean>
</beans>